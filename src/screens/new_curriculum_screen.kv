#:kivy 1.0

#:import login_screen src.screens.main_screen

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

NewCurriculumScreenRoot:
    AnchorLayout
        center: (root.center_x, root.center_y + 98)
        size: (80, 40)

        Label:
            font_size: '36sp'
            text: 'Curricula DB'


    AnchorLayout:
        center: root.center
        size: (320, 160)

        GridLayout
            rows: 4
            cols: 2
            padding: 10
            spacing: 10

            Label:
                size_hint_x: None
                width: 500
                text: 'Curriculum Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: curriculum_name
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 500
                text: 'Minimum Credit Hours:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: min_credit_hours
                multiline: False
                password: True
                text: ''

            Label:
                size_hint_x: None
                width: 500
                text: 'ID of Person in Charge:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: id_in_charge
                multiline: False
                text: 'localhost'

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Back'
                on_press: root.back_callback()
#:kivy 1.0

#:import login_screen src.screens.main_screen

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

NewCurriculumScreenRoot:

    AnchorLayout:
        center: root.center
        size: (1000, 1200)

        GridLayout
            rows: 8
            cols: 2
            padding: 100
            spacing: 75

            Label:
                size_hint_x: None
                width: 300
                text: 'Curriculum Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: curriculum_name
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'Minimum Credit Hours:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: min_credit_hours
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'ID of Person in Charge:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: id_in_charge
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'IDs of Curriculum Topics'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: curriculum_topics
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'Required Courses'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: required_courses
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'Optional Courses'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: optional_courses
                multiline: False
                text: ''

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Back'
                on_press: root.back_callback()

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Submit'
                on_press: root.submit_callback()
#:kivy 1.0

#:import login_screen src.screens.main_screen
#:import text_input_widgets src.widgets.text_input_widgets

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

NewTopicScreenRoot:

    StackLayout:
        orientation: 'lr-tb'
        width: root.width
        height: root.height
        size_hint: (None, None)

        Label:
            canvas.before:
                Color:
                    rgb: 0.37, 0.37, 0.37
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'New Topic'
            size_hint: (1.0, None)
            height: dp(40)

        Label:
            width: root.width
            height: root.height
            size_hint: (None, None)
            text_size: self.size
            id: live_description_label
            text: ''

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (dp(100), dp(100))
        padding: 10

        Button:
            size_hint: (None, None)
            size: (dp(100), dp(30))
            text: 'Back'
            on_press: root.back_callback()

    StackLayout:
        orientation: 'lr-bt'

        GridLayout
            pos_hint: (None, None)
            size_hint: (None, None)
            size: (root.width, dp(142))
            rows: 4
            cols: 2
            padding: dp(10)
            spacing: dp(2)

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Topic ID:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            IntTextInput:
                on_text: root.update_live_description_callback()
                id: topic_id
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Topic Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                on_text: root.update_live_description_callback()
                id: topic_name
                multiline: False
                text: ''

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Widget: # empty widget
                size_hint_x: None

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Submit'
                on_press: root.submit_callback()
CurriculumDashboardScreenRoot:

    BoxLayout:
        id: frame
        orientation: 'horizontal'
        size: root.size

        TestTreeWidget:
            id: tv

        StackLayout:
            Button:
                text: 'course description here'

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (100, 40)
        padding: 10

        Button:
            size_hint: (None, None)
            size: (100, 30)
            text: 'Back'
            on_press: root.back_callback()
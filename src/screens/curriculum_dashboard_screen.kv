# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#



CurriculumDashboardScreenRoot:

    BoxLayout:
        id: boxlayoutframe
        orientation: 'horizontal'
        size: root.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Label:
                canvas.before:
                    Color:
                        rgb: 0.37, 0.37, 0.37
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Curriculum'
                size_hint: (1.0, None)
                height: 60

            RowSelectorWidget:
                size_hint_x: 1.0
                id: curriculum_selector

        BoxLayout:
            orientation: 'vertical'

            Label:
                canvas.before:
                    Color:
                        rgb: 0.37, 0.37, 0.37
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: 'Curriculum Description'
                background_color: (1,0,0,1)
                size_hint_y: None
                height: 60

            Label:
                text: 'Here is some text describing a curriculum'


    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (100, 40)
        padding: 10

        Button:
            size_hint: (None, None)
            size: (100, 30)
            text: 'Back'
            on_press: root.back_callback()
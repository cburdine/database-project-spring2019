#:kivy 1.0

#:import login_screen src.screens.main_screen
#:import text_input_widgets src.widgets.text_input_widgets


# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

NewCourseScreenRoot:

    Label:
        width: root.width
        height: root.height
        size_hint: (None, None)
        text_size: self.size
        id: live_description_label
        text: ''

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (dp(100), dp(100))
        padding: 10

        Button:
            size_hint: (None, None)
            size: (dp(100), dp(30))
            text: 'Back'
            on_press: root.back_callback()

    StackLayout:
        orientation: 'lr-bt'

        GridLayout
            pos_hint: (None, None)
            size_hint: (None, None)
            size: (root.width, dp(195))
            rows: 10
            cols: 2
            padding: dp(10)
            spacing: dp(2)

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Course Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                on_text: root.update_live_description_callback()
                id: course_name
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Subject Code:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                on_text: root.update_live_description_callback()
                id: subject_code
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Credit Hours:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            IntTextInput:
                on_text: root.update_live_description_callback()
                id: credit_hours
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Description'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                on_text: root.update_live_description_callback()
                id: description
                multiline: False
                text: ''

            Widget: # empty widget
                size_hint_x: None
                height: dp(50)

            IntTextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: id_in_charge
                multiline: False
                text: ''
            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Add Course Topic:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    height: dp(50)
                    width: dp(30)
                    text: '+'
                    size_hint_x: None
                    on_press: root.add_topic_callback()

                Label:
                    text: 'Topic ID:'
                    height: dp(50)
                    width: dp(60)
                    size_hint_x: None
                IntTextInput:
                    on_text: root.update_live_description_callback()
                    height: dp(50)
                    id: course_topic_id
                    multiline: False
                    text: ''

            Widget: # empty widget
                size_hint_x: None
                height: dp(50)

            IntTextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: id_in_charge
                multiline: False
                text: ''
            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Add Course Goal:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    height: dp(50)
                    width: dp(30)
                    text: '+'
                    size_hint_x: None
                    on_press: root.add_topic_callback()

                Label:
                    text: 'Goal ID:'
                    height: dp(50)
                    width: dp(60)
                    size_hint_x: None
                IntTextInput:
                    on_text: root.update_live_description_callback()
                    height: dp(50)
                    id: course_goal_id
                    multiline: False
                    text: ''


            Widget: # empty widget
                size_hint_x: None
                height: dp(50)

            Widget: # empty widget
                size_hint_x: None
                width: dp(80)

            Widget: # empty widget
                size_hint_x: None
                height: dp(50)

            Button:
                height: dp(50)
                text: 'Submit'
                on_press: root.submit_callback()
NewCourseScreenRoot:

    AnchorLayout:
        center: root.center
        size: (1000, 1200)

        GridLayout
            rows: 6
            cols: 2
            padding: 100
            spacing: 75

            Label:
                size_hint_x: None
                width: 300
                text: 'Course Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: course_name
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'Subject Code:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: subject_code
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'Credit Hours:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: credit_hours
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: 300
                text: 'description'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                id: description
                multiline: False
                text: ''

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Back'
                on_press: root.back_callback()

            Widget: # empty widget
                size_hint_x: None
                width: 80

            Button:
                text: 'Submit'
                on_press: root.submit_callback()
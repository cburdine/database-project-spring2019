#:kivy 1.0

#:import main_screen src.screens.main_screen

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

AddNewScreenRoot:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (dp(100), dp(100))
        padding: dp(10)

        Button:
            size_hint: (None, None)
            size: (dp(100), dp(30))
            text: 'Back'
            on_press: root.back_callback()

    AnchorLayout:
        center: root.center
        size: (dp(400), dp(240))

        GridLayout
            rows: 8
            cols: 1
            padding: dp(5)
            spacing: dp(8)

            Button:
                text: 'New Curriculum'
                on_press: root.add_curriculum_callback()

            Button:
                text: 'New Topic'
                on_press: root.add_topic_callback()

            Button:
                text: 'New Course'
                on_press: root.add_course_callback()

            Button:
                text: 'New Section'
                on_press: root.add_section_callback()

            Button:
                text: 'New Person'
                on_press: root.add_person_callback()

            Button:
                text: 'New Goal'
                on_press: root.add_goal_callback()

            Button:
                text: 'New Course Goal'
                on_press: root.add_course_goal_callback()

            Button:
                text: 'New Course Topic'
                on_press: root.add_course_topic_callback()
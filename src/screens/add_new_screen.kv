#:kivy 1.0

#:import main_screen src.screens.main_screen

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

AddNewScreenRoot:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (100, 100)
        padding: 10

        Button:
            size_hint: (None, None)
            size: (100, 30)
            text: 'Back'
            on_press: root.back_callback()

    AnchorLayout:
        center: root.center
        size: (400, 200)

        GridLayout
            rows: 6
            cols: 1
            padding: 5
            spacing: 8

            Button:
                text: 'New Curriculum'
                on_press: root.add_curriculum_callback()

            Button:
                text: 'New Topic'
                on_press: root.add_topic_callback()

            Button:
                text: 'New Course'
                on_press: root.add_course_callback()

            Button:
                text: 'New Section'
                on_press: root.add_section_callback()

            Button:
                text: 'New Person'
                on_press: root.add_person_callback()

            Button:
                text: 'New Goal'
                on_press: root.add_goal_callback()
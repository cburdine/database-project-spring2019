#:kivy 1.0

#:import login_screen src.screens.main_screen
#:import text_input_widgets src.widgets.text_input_widgets

# This script is written in kv script language
# which makes our implementation a bit easier.
# Documentation and syntax can be found at:
#
# https://kivy.org/doc/stable/guide/lang.html
#

NewSectionScreenRoot:


    BoxLayout:
        orientation: 'vertical'
        pos: (dp(0), dp(230))
        width: root.width
        height: root.height - dp(230)
        size_hint: (None, None)

        Label:
            canvas.before:
                Color:
                    rgb: 0.37, 0.37, 0.37
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'New Section'
            size_hint: (1.0, None)
            height: dp(40)

        ScrollView:
            scroll_type: ['content', 'bars']
            bar_margin: dp(2)
            bar_width: dp(16)
            id: sv_page
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(320)

                Label:
                    text_size: self.size
                    id: live_description_label
                    height: dp(120)
                    size_hint_y: None
                    text: ''

                Label:
                    markup: True
                    text: '           [size=30]Comments:[/size]'
                    text_size: self.size
                    size_hint: (1.0, None)
                    height: dp(40)
                AnchorLayout:
                    width: root.width - dp(80)
                    anchor_x: 'center'

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (None, None)
                        center_x: root.center_x
                        pos_hint_x: None
                        pos_x: dp(40)
                        width: root.width - dp(80)
                        height: dp(160)

                        Label:
                            markup: False
                            id: comment_1
                            text: '<COMMENT 1>'
                            text_size: self.size
                            height: dp(80)

                        Label:
                            markup: False
                            id: comment_2
                            text: '<COMMENT 2>'
                            text_size: self.size
                            height: dp(80)


    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        size: (dp(100), dp(100))
        padding: 10

        Button:
            size_hint: (None, None)
            size: (dp(100), dp(30))
            text: 'Back'
            on_press: root.back_callback()

    StackLayout:
        orientation: 'lr-bt'

        GridLayout:
            pos_hint: (None, None)
            size_hint: (None, None)
            size: (root.width, dp(228))
            rows: 10
            cols: 2
            padding: dp(10)
            spacing: dp(2)

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Course Name:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                on_text: root.update_live_description_callback()
                id: course_name
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Year/Semester:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            BoxLayout:
                orientation: 'horizontal'
                height: dp(50)

                    IntTextInput:
                        on_text: root.update_live_description_callback()
                        height: dp(50)
                        id: year
                        multiline: False
                        text: ''
                    Spinner:
                        height: dp(50)
                        size_hint_x: None
                        width: dp(100)
                        values: ('Fall', 'Summer',' )
                        on_select: root.update_live_description_callback()

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Section ID:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            IntTextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: section_id
                multiline: False
                text: ''


            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Amount of Students:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            IntTextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: num_students
                multiline: False
                text: ''


            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Comment 1:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: comment_1
                multiline: False
                text: ''

            Label:
                size_hint_x: None
                width: dp(200)
                height: dp(50)
                text: 'Comment 2:'
                text_size: self.size
                halign: 'right'
                valign: 'middle'
            TextInput:
                on_text: root.update_live_description_callback()
                height: dp(50)
                id: comment_2
                multiline: False
                text: ''

            Widget: # empty widget
                size_hint_x: None
                width: dp(80)

            Widget: # empty widget
                height: dp(50)

            Widget: # empty widget
                size_hint_x: None
                width: dp(80)

            Button:
                height: dp(50)
                text: 'Submit'
                on_press: root.submit_callback()